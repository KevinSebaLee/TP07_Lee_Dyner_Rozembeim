<head><link rel="stylesheet" href="~/css/ruleta.css" asp-append-version="true"/></head>

<div class="confi">
    <form id="Username" action='@Url.Action("Comenzar")' class="d-flex justify-content-center">
        <div class="formulario">
            <div class="titulo">
                <h1>Ingrese su nombre de usuario</h5>
            </div>

            <div class=" d-flex align-items-center justify-content-center">
                <input type="text" name="username" id="nombreUsuario" required>
            </div>
            
            <div class="titulo">
                <h1>Ingrese la dificultad</h5>
            </div>
            <div class=" d-flex align-items-center justify-content-center">
                <select name="select">
                    <option value="value1" selected>Facil</option>
                    <option value="value2">Mediano</option>
                    <option value="value3">Dificil</option>
                </select>
            </div>

            <div class="enviar d-flex align-items-center justify-content-center">  
                <button onclick="ingresarUsuario()" class="btn btn-primary bg-warning border border-warning mt-3" style="border-radius: 25px; width: 10vw; height: 5vh;" id="botonUsuario">Ingresar</button>
            </div>
        </div>

        <div id="button">
            <input type="hidden" name="Categoria" id="categorias">
            <button type="submit" class="btn btn-primary bg-warning border border-warning" style=" border-radius: 25px; width: 10vw; height: 5vh;">Jugar</button>
        </div>
    </form>
 
    <div class="ruleta-container" style="margin-top: -4%;" id="ruleta">
        <canvas id="canvas" width="500" height="500"></canvas>
        <img src="~/img/flechita.png" class="flecha" alt="Flecha">
        <button class="girarBtn" id="girarBtn" onclick="girarRuleta()">Girar</button>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-datalabels/2.1.0/chartjs-plugin-datalabels.min.js"></script>
<script src="~/js/ruleta.js"></script>

